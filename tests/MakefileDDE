# Master Makefile

TESTS=000UT_PATH 001UT_FS 002UT_ENV 003UT_PROC 004UT_TERM
CLEAN=_clean_001UT_FS _clean_002UT_ENV _clean_003UT_PROC

.PHONY: $(TESTS)
$(TESTS):
	dir @.$@
	amu all THROWBACK=-throwback -f MakefileDDE
	RunMe
	up

.PHONY: $(CLEAN) _clean_%
_clean_%:
	dir @.$*
	amu clean -f MakefileDDE
	up

.PHONY: all
all: $(TESTS)

.PHONY: clean $(CLEAN) _clean_%
clean: $(CLEAN)

